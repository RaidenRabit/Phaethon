@model IEnumerable<Core.Model.Item>

<div class="card-body" style="padding-left: 20px;">
    <div class="row">
        <div class="col-sm-12">
            <div class="card" style="height: 130px; height: auto;">
                <div class="card-header" style="clear: both;" data-toggle="collapse" href="#itemSearch">Item search</div>

                <div id="itemSearch" class="card-body collapse" style="padding-left: 20px;">
                    <div class="row">
                        <div class="col-sm">
                            <label class="btn btn-info active">
                                <input id="serialNumber" type="text" class="form-control" placeholder="Serial number" /> Serial number
                            </label>
                        </div>

                        <div class="col-sm">
                            <label class="btn btn-info active">
                                <input id="productName" type="text" class="form-control" placeholder="Products" /> Product Name
                            </label>
                        </div>

                        <div class="col-sm">
                            <label class="btn btn-info active">
                                <input id="barcode" type="number" class="form-control" placeholder="Barcode" value="0" min="0" /> Barcode
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card" style="height: 130px; height: auto;">
                <div class="card-header" style="clear: both;" data-toggle="collapse" href="#itemList">Items</div>

                <div id="itemList" class="card-body collapse show" style="padding-left: 20px;">
                    <table id="itemTable" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SerNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Product.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Product.Barcode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IncomingPrice)
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Item/Select")