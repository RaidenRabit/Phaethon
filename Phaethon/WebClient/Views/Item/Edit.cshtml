@model Core.Model.Item
@{ViewBag.Title = "Edit";}
@using LanguagePack = WebClient.Resources.Language_Files.LanguagePack;

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Product.ID)
    @Html.HiddenFor(model => model.IncomingTaxGroup.ID)
    @Html.HiddenFor(model => model.OutgoingTaxGroup.ID)
    @Html.HiddenFor(model => model.Product.ProductGroup.ID)

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.SerialNumberLabel</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SerNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SerNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.ProductNameLabel</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.ProductBarcodeLabel</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product.Barcode, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product.Barcode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.Incoming</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.IncomingTaxGroup.Tax, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.IncomingTaxGroup.Tax, "", new { @class = "text-danger" })
        </div>
        <div class="col-form-label col-md-4">@LanguagePack.Outgoing</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.OutgoingTaxGroup.Tax, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.OutgoingTaxGroup.Tax, "", new { @class = "text-danger" })
        </div>
        <div class="col-form-label col-md-4">@LanguagePack.ProductPrice</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.ProductGroupNameLabel</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product.ProductGroup.Margin, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.Product.ProductGroup.Margin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="@LanguagePack.Save" class="btn btn-primary btn-lg btn-block" />
    </div>
</div>
}

@if (Model != null)
{
    using (Html.BeginForm("Delete", "Item", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.ID)
        <input type="submit" value="@LanguagePack.DeleteButton" class="btn btn-danger btn-block" />
    }
}

<div>
    @Html.ActionLink(LanguagePack.Back, "Index")
</div>

@Scripts.Render("~/bundles/Item/Edit")