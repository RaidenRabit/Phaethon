@model Core.Model.Item
@{ViewBag.Title = "Edit";}
@using LanguagePack = WebClient.Resources.Language_Files.LanguagePack;

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.IncomingTaxGroup_ID)
    @Html.HiddenFor(model => model.OutgoingTaxGroup_ID)
    @Html.HiddenFor(model => model.Product.ID)

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.SerialNumber</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SerNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SerNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.Product_Name</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.Product_Barcode</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product.Barcode, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product.Barcode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.ProductPrice</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-form-label col-md-4">@LanguagePack.ProductGroup</div>
        <div class="col-md-10">
            <select class='form-control' data-val='true' data-val-number='The field ID must be a number.' data-val-required='The ID field is required.' id='ProductGroup_ID' name='Product.ProductGroup_ID' required='required'></select>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="@LanguagePack.Save" class="btn btn-primary btn-lg btn-block" />
    </div>
</div>
}

@if (Model != null)
{
    using (Html.BeginForm("Delete", "Item", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.ID)
        <input type="submit" value="@LanguagePack.Delete" class="btn btn-danger btn-block" />
    }
}

<div>
    @Html.ActionLink(LanguagePack.Back, "Index")
</div>

@Scripts.Render("~/bundles/Item/Edit")