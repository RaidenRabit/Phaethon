@model Core.Model.Invoice
@{ViewBag.Title = "Edit";}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-body" style="padding-left: 20px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default" style="height: 130px; height: auto;">
                    <div class="panel-heading" style="clear:both;" data-toggle="collapse" href="#invoiceInfo">Invoice Info</div>

                    <div id="invoiceInfo" class="panel-body collapse" style="padding-left: 20px;">
                        @{ Html.RenderPartial("_editInvoice", Model); }
                        @{ Html.RenderPartial("_editCompanies", Model); }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default" style="height: 130px; overflow: hidden;">
                    <div class="panel-heading" style="clear: both;">Products</div>

                    <div class="panel-body" style="padding-left: 20px;">

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg btn-block" />
                </div>
            </div>
        </div>
    </div>
}
@Scripts.Render("~/bundles/Invoice/Edit")