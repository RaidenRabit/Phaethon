@model Core.Model.Invoice
@Styles.Render("~/Content/dateRangePicker")
@{ViewBag.Title = "Index";}
@using LanguagePack = WebClient.Resources.Language_Files.LanguagePack;

<div class="card-body" style="padding-left: 20px;">
    <div id="dialog" style="display: none">
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card" style="height: 130px; height: auto;">
                <div class="card-header" style="clear: both;" data-toggle="collapse" href="#invoiceSearch">@LanguagePack.InvoiceSearch</div>

                <div id="invoiceSearch" class="card-body collapse" style="padding-left: 20px;">
                    <div class="form-group">
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-info active">
                                <input type="radio" name="dateOption" value="0" checked> @LanguagePack.PrescriptionDateLabel
                            </label>
                            <label class="btn btn-info">
                                <input type="radio" name="dateOption" value="1"> @LanguagePack.ReceptionDateLabel
                            </label>
                            <label class="btn btn-info">
                                <input type="radio" name="dateOption" value="2"> @LanguagePack.PaymentDateLabel
                            </label>
                        </div>

                        <input id="dateRange" type="datetime" class="daterange form-control" />
                    </div>

                    <div class="form-group">
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-info active">
                                <input type="radio" name="companyOption" value="0" checked> @LanguagePack.ReceiverCompanyLabel
                            </label>
                            <label class="btn btn-info">
                                <input type="radio" name="companyOption" value="1"> @LanguagePack.SenderCompanyLabel
                            </label>
                        </div>

                        <input id="companyName" type="text" class="form-control" list="companies" placeholder="@LanguagePack.CompaniesPlaceholder" />
                        <datalist id="companies"></datalist>
                    </div>

                    <div class="form-group">
                        <input id="docNumber" type="text" class="form-control" placeholder="@LanguagePack.DocumentNumberPlaceholder" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card" style="height: 130px; height: auto;">
                <div class="card-header" style="clear: both;" data-toggle="collapse" href="#invoiceList">
                    @LanguagePack.Invoices
                <div style="float: right"><Input type="button" id="newInvoice" class="btn btn-success" value="@LanguagePack.NewInvoiceButton"></div>
            </div>

            <div id="invoiceList" class="card-body collapse show" style="padding-left: 20px;">
                <table id="invoiceTable" class="table">
                    <thead>
                        <tr>
                            <th>
                                @LanguagePack.DocumentNumberPlaceholder
                            </th>
                            <th>
                                @LanguagePack.InvoiceType
                            </th>
                            <th>
                                @LanguagePack.PrescriptionDateLabel
                            </th>
                            <th>
                                @LanguagePack.ReceiverCompanyLabel
                            </th>
                            <th>
                                @LanguagePack.PaymentDateLabel
                            </th>
                            <th>
                                @LanguagePack.SenderCompanyLabel
                            </th>
                            <th>
                                @LanguagePack.ReceiverCompanyLabel
                            </th>
                            <th>
                                @LanguagePack.Sum
                            </th>
                            <th>
                                <input id="numOfRecords" type="number" class="form-control" value="10" />
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>

@Scripts.Render("~/bundles/Invoice")
@Scripts.Render("~/bundles/dateRangePicker")