@using Core.Model
@model Core.Model.Invoice

<table id="elementTable" class="table table-hover">
    <thead>
    @{
        Item item = new Item();
        <tr>
            <th>
                @Html.DisplayNameFor(model => item.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.SerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Product.Barcode)
            </th>
            <th>
                Price
            </th>
            <th id="taxGroupLabel" class="text-primary">
                Tax
            </th>
            <th id="productGroupLabel" class="text-primary">
                @Html.DisplayNameFor(model => item.Product.ProductGroup.Name)
            </th>
            <th>
                Final price
            </th>
            <th>
                Action
            </th>
        </tr>
    }
    </thead>
    <tbody>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4"></td>
            <td>
                <input type="number" id="totalNoTax" class="form-control" readonly />
            </td>
            <td colspan="2"></td>
            <td>
                <input type="number" id="totalAmount" class="form-control" readonly />
            </td>
            <td>
                <input type="button" id="newItemRow" class="btn btn-success" value="Add new item" />
            </td>
        </tr>
    </tfoot>
</table>