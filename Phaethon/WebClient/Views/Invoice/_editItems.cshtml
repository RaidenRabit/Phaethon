@using Core.Model
@model Core.Model.Invoice
@using LanguagePack = WebClient.Resources.Language_Files.LanguagePack;

<div id="dialog" style="display: none">
</div>

<table id="itemTable" class="table table-hover">
    <thead>
        <tr>
            <th>
                @LanguagePack.EditItemsPartialViewSerialNumberLabel
            </th>
            <th>
                @LanguagePack.EditItemsPartialViewProductNameLabel
            </th>
            <th>
                @LanguagePack.EditItemsPartialViewProductBarcodeLabel
            </th>
            <th>
                @LanguagePack.EditItemsPartialViewProductPrice
            </th>
            <th id="taxGroupLabel">
                @LanguagePack.EditItemsPartialViewTaxGroupLabel
            </th>
            <th id="productGroupLabel">
                @LanguagePack.EditItemsPartialViewProductGroupNameLabel
            </th>
            <th>
                @LanguagePack.EditItemsPartialViewItemIncomingPriceLabel
            </th>
            <th>
                @LanguagePack.EditItemsPartialViewActionLabel
            </th>
        </tr>
    </thead>
    <tbody></tbody>
    <tfoot>
        <tr>
            <td colspan="6"></td>
            <td>
                <input type="number" step='0.01' id="totalAmount" class="form-control" readonly />
            </td>
            <td colspan="6">
                <input type="button" id="newItemRow" class="btn btn-success" value="@LanguagePack.EditItemsPartialViewNewItemButton" />
            </td>
        </tr>
    </tfoot>
</table>