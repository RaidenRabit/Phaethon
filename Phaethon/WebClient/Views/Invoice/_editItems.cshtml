@using Core.Model
@model Core.Model.Invoice

<datalist id="ProductGroups"></datalist>
<table id="itemTable" class="table table-hover">
    <thead>
    @{
        Item item = new Item();
        <tr>
            <th>
                @Html.DisplayNameFor(model => item.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Product.Barcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.SerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Product.ProductGroup.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Product.ProductGroup.Tax)
            </th>
            <th>
                Sum
            </th>
            <th>
                Action
            </th>
        </tr>
    }
    </thead>
    <tbody>
        @Html.EditorFor(model => model.Elements)
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6"></td>
            <td>
                <input type="text" class="form-control" value="0" />
            </td>
            <td colspan="6">
                <input type="button" id="newItemRow" class="btn btn-success" value="Add new item"/>
            </td>
        </tr>
    </tfoot>
</table>
