@using Core.Model
@model Core.Model.Invoice

<div id="dialog" style="display: none">
</div>

<table id="itemTable" class="table table-hover">
    <thead>
    @{
        Item item = new Item();
        <tr>
            <th>
                @Html.DisplayNameFor(model => item.SerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Product.Barcode)
            </th>
            <th>
                Price
            </th>
            <th>
                <label id="TaxGroupLabel">
                    @Html.DisplayNameFor(model => item.IncomingTaxGroup.Name)
                </label>
            </th>
            <th>
                <label id="ProductGroupLabel">
                    @Html.DisplayNameFor(model => item.Product.ProductGroup.Name)
                </label>
            </th>
            <th>
                @Html.DisplayNameFor(model => item.IncomingPrice)
            </th>
            <th>
                Action
            </th>
        </tr>
    }
    </thead>
    <tbody>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6"></td>
            <td>
                <input type="number" step='0.01' id="TotalAmount" class="form-control" readonly/>
            </td>
            <td colspan="6">
                <input type="button" id="newItemRow" class="btn btn-success" value="Add new item"/>
            </td>
        </tr>
    </tfoot>
</table>