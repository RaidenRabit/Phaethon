@model IEnumerable<Core.Model.Job>

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <th>
            Job ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinishedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Customer Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.ID)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.JobName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartedTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FinishedTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @item.Customer.FamilyName @item.Customer.GivenName
        </td>
    </tr>
}

</table>
