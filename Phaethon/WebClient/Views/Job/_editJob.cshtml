@model Core.Model.Job
@using LanguagePack = WebClient.Resources.Language_Files.LanguagePack;

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editJobPartial", target = "_blank" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Customer.ID)
    @Html.HiddenFor(model => model.Customer.Address.ID)
    <div id="editJobPartial">
        <strong>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="card">
                <div class="card-header">
                    @LanguagePack.JobDetails
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group">
                            @LanguagePack.JobIdPlaceHolder
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @required = "required" }, @readonly = "readonly", @disabled = "disabled" })
                            </div>
                        </div>

                        <div class="form-group">
                            @LanguagePack.JobNamePlaceHolder
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.JobName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.JobName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @LanguagePack.StartedTimePlaceHolder
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.StartedTime, new { htmlAttributes = new { @class = "form-control datepicker", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.StartedTime, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @LanguagePack.FinishedTimePlaceHolder
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FinishedTime, new { htmlAttributes = new { @class = "form-control datepicker", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.FinishedTime, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @LanguagePack.Cost
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "0.01", @value = "0", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @LanguagePack.JobStatus
                            <div class="col-md-10">
                                @Html.EnumDropDownListFor(model => model.JobStatus, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.JobStatus, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @LanguagePack.JobDescriptionPlaceHolder
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="card">
                    <div class="card-header">
                        @LanguagePack.CustomerDetails
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group">
                                @LanguagePack.CustomerIdPlaceholder
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Customer.ID, new { htmlAttributes = new { @class = "form-control", @required = "required" }, @readonly = "readonly", @disabled = "disabled" })
                                </div>
                            </div>
                            <div class="form-group">
                                @LanguagePack.CustomerGivenNamePlaceholder
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Customer.GivenName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Customer.GivenName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @LanguagePack.CustomerFamilyNamePlaceholder
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Customer.FamilyName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Customer.FamilyName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @LanguagePack.CustomerEmailPlaceholder
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Customer.Email, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Customer.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @LanguagePack.ContactPagePhone
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Customer.Phone, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Customer.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        @LanguagePack.AddressDetails
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group">
                                @LanguagePack.AddressIDPlaceholder
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Customer.Address.ID, new { htmlAttributes = new { @class = "form-control", @required = "required" }, @readonly = "readonly", @disabled = "disabled" })
                                </div>
                            </div>
                            <div class="form-group">
                                @LanguagePack.AddressCityPlaceholder
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Customer.Address.City, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Customer.Address.City, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @LanguagePack.AddressStreetPlaceholder
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Customer.Address.Street, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Customer.Address.Street, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @LanguagePack.AddressNumberPlaceholder
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Customer.Address.Number, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Customer.Address.Number, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @LanguagePack.AddressExtraPlaceholder
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Customer.Address.Extra, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Customer.Address.Extra, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </strong>
    </div>
}