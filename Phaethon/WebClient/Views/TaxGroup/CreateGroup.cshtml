@model Core.Model.TaxGroup
@using LanguagePack = WebClient.Resources.Language_Files.LanguagePack;

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "taxGroupForm" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-form-label col-md-4">@LanguagePack.TaxGroup</div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-form-label col-md-4">@LanguagePack.Tax</div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Tax, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tax, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
